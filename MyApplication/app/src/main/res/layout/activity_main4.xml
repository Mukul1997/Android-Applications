<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    tools:context=".Main4Activity">

    <Button
        android:id="@+id/equal"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/add"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="-13dp"
        android:text="="
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/dec"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/screen"
        android:layout_marginBottom="185dp"
        android:text="."
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/clr"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/nine"
        android:layout_alignTop="@+id/zero"
        android:text="clear"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/zero"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/dec"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <TextView
        android:id="@+id/screen"
        android:layout_width="337dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:hint="0"
        android:textAlignment="viewEnd"
        android:textSize="50sp" />

    <Button
        android:id="@+id/two"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/one"
        android:layout_centerHorizontal="true"
        android:text="2"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/five"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/two"
        android:layout_alignTop="@+id/four"
        android:text="5"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/one"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/screen"
        android:layout_marginTop="199dp"
        android:text="1"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/seven"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dec"
        android:layout_marginBottom="271dp"
        android:text="7"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/four"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/screen"
        android:layout_marginTop="287dp"
        android:text="4"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/eight"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/two"
        android:layout_alignTop="@+id/seven"
        android:text="8"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/six"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/three"
        android:layout_alignTop="@+id/four"
        android:text="6"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/three"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignEnd="@+id/screen"
        android:layout_alignTop="@+id/two"
        android:text="3"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/nine"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/three"
        android:layout_alignTop="@+id/seven"
        android:text="9"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/sub"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/add"
        android:layout_marginEnd="103dp"
        android:text="-"
        android:textSize="20sp"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/add"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="95dp"
        android:text="+"
        android:textSize="20sp"
        android:theme="@style/MyButton" />
</RelativeLayout>